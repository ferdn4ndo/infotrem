{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "node-frontend",
      "host": {
        "sourcePath": "~/dev/infotrem/node-frontend"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-frontend",
      "image": "node:8-strech",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "command": [
        "/bin/bash",
        "/usr/src/app/run.sh"
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/usr/src/frontend"
        }
      ]
    }
  ]
}